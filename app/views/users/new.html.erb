<h1>New user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, {placeholder: 'First Name', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, {placeholder: 'Last Name', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :nick_name %><br>
    <%= f.text_field :nick_name, {placeholder: 'Nick Name', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :login_name %><br>
    <%= f.text_field :login_name, {placeholder: 'Login ID', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, {placeholder: 'Choose a good one!', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, {placeholder: 'Repeat it here', size: 25} %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, order: [:month, :day, :year] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', users_path %>
