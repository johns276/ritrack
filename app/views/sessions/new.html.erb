<div class="session_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :login_name, params[:login_name], size: 25 %>
      </div>
      <div>
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password], size: 25 %>
      </div>
      <div>
        <%= submit_tag "Login", id: 'button' %>
      </div>
    </fieldset>
  <% end %>
</div>
